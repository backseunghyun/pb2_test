<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toobar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/ll_rootlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/c_999999"
                    app:font="custom1"
                    android:text="상호명"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="295dp"
                    android:layout_height="34dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:textSize="13dp"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_cecece"
                    android:hint="상품명 입력"
                    app:font="custom1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/c_999999"
                    app:font="custom1"
                    android:text="단위"/>
                <EditText
                    android:id="@+id/et_unit"
                    android:layout_width="295dp"
                    android:layout_height="34dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:textSize="13dp"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_cecece"
                    android:hint="ex) 1EA, 1BOX, 1KG 등"
                    app:font="custom1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="@color/c_999999"
                    app:font="custom1"
                    android:text="기타"/>
                <EditText
                    android:id="@+id/et_etc"
                    android:layout_width="295dp"
                    android:layout_height="98dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:textSize="13dp"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_cecece"
                    android:hint="ex) 제조원:동원"
                    android:gravity="start"
                    app:font="custom1"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textSize="13dp"
                android:textColor="@color/c_999999"
                app:font="custom1"
                android:text="이미지등록"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                >
                <RelativeLayout
                    android:id="@+id/rl_add"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:background="@color/c_ffffff">
                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="10dp"
                        android:layout_height="11dp"
                        android:background="@drawable/ic_image_add"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="73dp"
                        android:layout_height="73dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/c_f33b2d"
                    app:font="custom1"
                    android:text="*안내문구 필요 "/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="27dp"
        android:paddingLeft="33dp"
        android:paddingRight="33dp">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/shape_round_5dp_cecece"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="취소"
            />
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="24dp"
            android:background="@drawable/shape_round_5dp_333333"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="확인"
            />
    </LinearLayout>
</LinearLayout>