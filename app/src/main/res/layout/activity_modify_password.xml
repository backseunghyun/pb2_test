<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4"
    >

    <include layout="@layout/toobar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/ll_rootlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="33dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="현재 비밀번호"
                    android:textSize="13dp"
                    android:textColor="@color/c_999999"
                    />
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13dp"
                    android:textColor="@color/c_000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/d_edittext_left_padding"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="새 비밀번호"
                    android:textSize="13dp"
                    android:textColor="@color/c_999999"
                    />
                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13dp"
                    android:textColor="@color/c_000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/d_edittext_left_padding"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textSize="13dp"
                    android:textColor="@color/c_999999"
                    />
                <EditText
                    android:id="@+id/et_ack_password"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13dp"
                    android:textColor="@color/c_000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/d_edittext_left_padding"
                    android:inputType="textPassword"/>
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="27dp"
                android:layout_marginBottom="27dp">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="0.5"
                    android:background="@color/c_cecece"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="취소"
                    />
                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="24dp"
                    android:background="@color/c_333333"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="수정"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
