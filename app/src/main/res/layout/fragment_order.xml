<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/c_f33b2d">
        <RelativeLayout
            android:id="@+id/rl_change"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/c_d62417">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:background="@drawable/selector_btn_list"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_round_5dp_ffffff"
            android:textSize="16dp"
            android:textColor="@color/c_000000"/>
        <Button
            android:id="@+id/b_search"
            android:layout_width="58dp"
            android:layout_height="36dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_round_5dp_ffffff"
            android:textSize="16dp"
            android:textColor="@color/c_d62417"
            android:gravity="center"
            android:textStyle="bold"
            android:text="검색"/>
    </LinearLayout>
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_cecece"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>