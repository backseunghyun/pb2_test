<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toobar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/ll_rootlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/c_999999"
                    app:font="custom1"
                    android:text="제목"/>
                <EditText
                    android:id="@+id/et_subject"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:textSize="13dp"
                    android:textColor="@color/c_333333"
                    app:font="custom1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:textSize="13dp"
                    android:textColor="@color/c_999999"
                    app:font="custom1"
                    android:text="내용"/>
                <EditText
                    android:id="@+id/et_contents"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@drawable/shape_round_5dp_ffffff"
                    android:textSize="13dp"
                    android:textColor="@color/c_333333"
                    android:gravity="start"
                    app:font="custom1"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="27dp"
        android:paddingLeft="33dp"
        android:paddingRight="33dp">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/shape_round_5dp_cecece"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="취소"
            />
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="24dp"
            android:background="@drawable/shape_round_5dp_333333"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="확인"
            />
    </LinearLayout>
</LinearLayout>