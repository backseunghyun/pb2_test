<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/shape_popup_header"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/c_ffffff"
                android:layout_centerInParent="true"
                android:text="배송요청사항"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_popup_footer_f4f4f4"
            >
            <EditText
                android:id="@+id/et_contents"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/shape_round_5dp_ffffff"
                android:textSize="13dp"
                android:textColor="@color/c_333333"
                app:font="custom1"
                android:paddingTop="14dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingBottom="14dp"
                android:maxLength="38"
                android:gravity="start"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="22dp"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="@color/c_333333"
                    app:font="custom1"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="@color/c_999999"
                    app:font="custom1"
                    android:text="/38"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="21dp">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="123dp"
                    android:layout_height="35dp"
                    android:textSize="14dp"
                    android:textColor="@color/c_ffffff"
                    android:textStyle="bold"
                    android:background="@drawable/shape_round_5dp_cecece"
                    android:gravity="center"
                    android:text="취소"/>
                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="123dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="14dp"
                    android:textColor="@color/c_ffffff"
                    android:textStyle="bold"
                    android:background="@drawable/shape_round_5dp_333333"
                    android:gravity="center"
                    android:text="확인"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>