<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/c_f33b2d">
        <ImageView
            android:layout_width="175dp"
            android:layout_height="28dp"
            android:background="@drawable/order_step_01"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/c_ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/c_f33b2d"
            android:textStyle="bold"
            android:text="수량"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/c_f33b2d"
            android:text="을 선택해 주세요."/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/c_cecece"/>

    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="0.6dp"
        android:background="@color/c_ffffff"
        android:divider="@color/c_cecece"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="@color/c_999999"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="13dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/c_666666"
                app:font="custom1"
                android:text="총 수량:"/>
            <TextView
                android:id="@+id/tv_cntProductInCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:textSize="17dp"
                android:textColor="@color/c_333333"
                app:font="custom1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/c_666666"
                app:font="custom1"
                android:text="총 금액:"/>
            <TextView
                android:id="@+id/tv_totalOfOrderPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17dp"
                android:textColor="@color/c_f33b2d"
                app:font="custom1"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/rl_next"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/shape_round_5dp_f33b2d">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/c_ffffff"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="NEXT"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:background="@drawable/ic_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
</LinearLayout>