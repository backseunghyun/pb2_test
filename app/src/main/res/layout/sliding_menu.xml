        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/main_ic_graph"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_menu_graph"
            android:textSize="15dp"
            android:textColor="@color/c_636567"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_height"
        android:paddingLeft="@dimen/slidingmenu_item_left_padding"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/main_ic_history"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_menu_history"
            android:textSize="15dp"
            android:textColor="@color/c_636567"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_board"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_height"
        android:paddingLeft="@dimen/slidingmenu_item_left_padding"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/main_ic_board"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_menu_board"
            android:textSize="15dp"
            android:textColor="@color/c_636567"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_noti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_height"
        android:paddingLeft="@dimen/slidingmenu_item_left_padding"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/main_ic_noti"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_menu_noti"
            android:textSize="15dp"
            android:textColor="@color/c_636567"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_report"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_height"
        android:paddingLeft="@dimen/slidingmenu_item_left_padding"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/main_ic_pna"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_menu_report"
            android:textSize="15dp"
            android:textColor="@color/c_636567"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_height"
        android:paddingLeft="@dimen/slidingmenu_item_left_padding"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/main_ic_setting"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_menu_setting"
            android:textSize="15dp"
            android:textColor="@color/c_636567"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingmenu_height"
        android:paddingLeft="30dp"
        android:textSize="13dp"
        android:textColor="@color/c_999999"
        android:text="@string/s_menu_logout"/>


</LinearLayout>